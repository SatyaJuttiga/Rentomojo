<% include ../partials/header %>


 <div class="container">
    <header class="jumbotron">
        <div class="container">
           <h1> Welcome to HackerNews!!!!!</h1>
           <p>View latest news over the world</p>
        </div>
    </header>

    <div class='row-text-center' style="display: flex;flex-wrap: wrap;">
            <% allnews.forEach(function(news){ %>
                <div class=" col-md-3">        
                    <div class="caption">
                            <h3><%= news.name %></h3>          
                    </div>
                    <p>
                            <a href="/news/<%= news._id %>" class="btn btn-primary">More Info</a>
                   </p>                    
                </div>
            <% }); %>
    </div>  
 </div>

<% include ../partials/footer %>
