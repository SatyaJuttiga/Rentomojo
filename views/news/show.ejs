<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">News</p>
            
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                    <div class="caption-full">
                        <h4><a><%= news.name %></a></h4>
                        <p><%= news.description %></p>
                        
                    </div>
            </div>
            <div class="well">
                <div class="text-right">
                        <a class='btn btn-success' href="/news/<%= news._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% news.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                                <strong><%= comment.author.username %></strong>
                                <p>
                                   <%= comment.text %>
                                </p>
                                <a class="btn btn-xs btn-warning" href="/news/<%=news._id %>/comments/<%=comment._id %>/edit">Edit</a>
                                <form id="delete-form" action="/news/<%=news._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                        </div>
                    </div>  
                 <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>


