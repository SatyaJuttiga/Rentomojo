<% include ../partials/header %>
<div class="container">
   <div>
      <h1 style="text-align: center">Add New Comment to <%= news.name %></h1>
      <div style="width:30%; margin: 25px auto;">
       <form action="/news/<%= news._id %>/comments" method="POST">
        <div class="form-group">
         <input class='form-control' type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
         <input  class='form-control' type="text" name="comment[author.username]" placeholder="author">
        </div>
         <div class="form-group">
         <button class="btn btn-lg btn-primary btn-block">submit</button>
        </div>
       </form>
       <a href="/news">Go Back</a>
    </div>
    </div>
</div>
